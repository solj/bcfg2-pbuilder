#!/bin/bash

COMPONENT="unstable"
VERSION=1.4.0
TRY=0

# create ${COMPONENT} directory
TMPDIR=$(mktemp -d --suffix=bcfg2)
UNSTABLEDIR=${TMPDIR}/${COMPONENT}
mkdir ${UNSTABLEDIR}

# download source
cd ${UNSTABLEDIR}
git clone git://git.mcs.anl.gov/bcfg2
cd bcfg2
GITID=$(git log --oneline | head -n 1 | cut -d' ' -f1)
cp debian/changelog ../changelog.orig

for dist in squeeze wheezy jessie sid
do
    cp ../changelog.orig debian/changelog
    (cd debian && dch --distribution ${dist} \
                      --force-bad-version \
                      --preserve \
                      --force-distribution \
                      --newversion "${VERSION}~${COMPONENT}~${dist}${TRY}+${GITID}" \
                      "bcfg2 backport for ${dist} release ${VERSION} git commit ${GITID}")
    # set the codename (end)
    pdebuild --architecture amd64 --buildresult ${UNSTABLEDIR} --pbuilderroot "sudo DIST=$dist"
    for deb in $(ls ${UNSTABLEDIR}/*$dist*.deb)
    do
        reprepro --basedir /var/www/public -C ${COMPONENT} includedeb $dist $deb
    done
done

cd /tmp && rm -rf ${TMPDIR}
